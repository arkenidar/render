{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "[deb] Debug Render (Debian/CMake)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/render",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "CMake Build Render (Debian)",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "[msw] Debug Render (Windows/MSYS/CMake)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/render.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
      "preLaunchTask": "CMake Build Render (Windows/MSYS)",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}