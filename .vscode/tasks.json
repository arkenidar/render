{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake Build Render (Debian)",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"command": "cmake -S . -B build && cmake --build build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"detail": "Build with native shell (Debian / Linux)."
		},
		{
			"label": "CMake Build Render (Windows/MSYS)",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}",
				"shell": {
					"executable": "C:\\msys64\\usr\\bin\\bash.exe",
					"args": ["-lc"]
				}
			},
			"command": "cmake -S . -B build && cmake --build build",
			"group": {
				"kind": "build"
			},
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"detail": "Build using MSYS bash on Windows."
		},
		{
			"label": "Make Build Render",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"command": "make",
			"group": {
				"kind": "build"
			},
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		}
	]
}